generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model BmiLog {
  id          String   @id @default(cuid())
  userId      String   // Just a string, no Foreign Key constraint
  bmi         Float
  weight      Float
  height      Float
  unitSystem  String   @default("metric")
  category    String
  timestamp   DateTime @default(now())
}
